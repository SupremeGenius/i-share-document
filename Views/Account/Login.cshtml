@model ISDProject.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

@section Styles {
    <style type="text/css">
        body {
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }

            .form-signin .form-signin-heading,
            .form-signin .checkbox {
                margin-bottom: 10px;
            }

            .form-signin input[type="text"],
            .form-signin input[type="password"] {
                font-size: 16px;
                height: auto;
                margin-bottom: 15px;
                padding: 7px 9px;
            }
    </style>
}

<div class="container">

    <div class="form-signin">
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.ValidationSummary(true)

            <h2 class="form-signin-heading">Please sign in</h2>
            @Html.TextBoxFor(m => m.UserName, new { @class = "input-block-level", placeholder = "Login" })
            @Html.PasswordFor(m => m.Password, new { @class = "input-block-level", placeholder = "Password" })

            <label class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe) Remember me
                </label>
            <input type="submit" value="Log in !" class="btn btn-large btn-primary" />
        }
    </div>
                
</div>
<!-- /container -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
